<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#cbbe"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/marker2_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/marker2_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@android:color/black"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/marker2_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@android:color/black"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/marker2_text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@android:color/black"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/marker2_text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@android:color/black"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/marker2_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="홈페이지 연결"
            android:textColor="@android:color/black"
            android:background="@color/white"
            android:layout_marginRight="10dp"
            android:textSize="14dp" />

        <Button
            android:id="@+id/marker3_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="전화 하기"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:background="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>